<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/memory_nav_graph"
    app:startDestination="@id/startFragmentMemory">

    <fragment
        android:id="@+id/startFragmentMemory"
        android:name="com.example.flashpig.memory.MemoryFragmentStart"
        android:label="fragment_start"
        tools:layout="@layout/memory_fragment_start" >
        <action
            android:id="@+id/action_startFragmentMemory_to_endFragmentMemory"
            app:destination="@id/endFragmentMemory"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>

    <fragment
        android:id="@+id/endFragmentMemory"
        android:name="com.example.flashpig.memory.MemoryFragmentEnd"
        android:label="fragment_end"
        tools:layout="@layout/memory_fragment_end" >
        <action
            android:id="@+id/action_endFragment_to_startFragment"
            app:destination="@id/startFragmentMemory"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/action_endFragment_to_mainActivity"
            app:destination="@id/mainActivity"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.example.flashpig.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>