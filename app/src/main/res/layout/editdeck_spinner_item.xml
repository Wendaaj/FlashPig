<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spinnerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    app:layout_anchorGravity="center_horizontal">

    <TextView
        android:id="@+id/deckNameSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:focusable="false"
        android:fontFamily="@font/roboto_slab_bold"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="@string/Deck_name"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/amountCardsSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/spinnerEditButton"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/ic_baseline_more_horiz_24"
        android:gravity="center"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/amountCardsSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/amountCardsSpinner" />

    <TextView
        android:id="@+id/amountCardsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toStartOf="@+id/spinnerEditButton"
        android:layout_toLeftOf="@+id/spinnerEditButton"
        android:fontFamily="@font/roboto_slab_bold"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="@string/amount_cards"
        android:textSize="15sp"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/deckNameSpinner"
        app:layout_constraintEnd_toStartOf="@+id/spinnerEditButton"
        app:layout_constraintTop_toTopOf="@+id/deckNameSpinner"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/spinnerConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <Button
            android:id="@+id/removeSpinnerItemBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"

            android:background="#00FFFFFF"
            android:drawableLeft="@drawable/ic_baseline_delete_24"
            android:text="@string/remove_spinner_item"
            android:textColor="#F00000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shareSpinnerItemBtn"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/shareSpinnerItemBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="#00FFFFFF"
            android:drawableLeft="@drawable/ic_baseline_share_24"
            android:text="@string/share_spinner_itemr"
            android:textColor="#0066FF"
            app:layout_constraintEnd_toStartOf="@+id/removeSpinnerItemBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>